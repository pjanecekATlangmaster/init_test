      <header-prop>
        <h3>Eval group</h3>
      </header-prop>
      <doc-descr></doc-descr>
      <p>
        <eval-btn id="g9"></eval-btn>
        <br />
        <gap-fill correct-value="a" group-id="a1"/>
        <gap-fill correct-value="b" group-id="a1"/>
      </p>
    </doc-example>-->
    <doc-example id="evalGroup10">
      <header-prop>
        <h3>Word multi selection</h3>
      </header-prop>
      <doc-descr></doc-descr>
      <eval-button id="g10"></eval-button>
      <br />
      <word-multi-selection words="a|#b|#c|d" eval-button-id="g10"/>
    </doc-example>

    <doc-example id="evalGroup11">
      <header-prop>
        <h3>Check box</h3>
      </header-prop>
      <doc-descr></doc-descr>
      <eval-button id="g11"></eval-button>
      <br />
      <check-box correct-value="true" eval-button-id="g11"/>
    </doc-example>

    <doc-example id="evalGroup12">
      <header-prop>
        <h3>Word ordering</h3>
      </header-prop>
      <doc-descr></doc-descr>
      <eval-button id="g12"></eval-button>
      <br />
      <word-ordering correct-order="a|b|c|d" eval-button-id="g12"/>
    </doc-example>

    <doc-example id="evalGroup13">
      <header-prop>
        <h3>Word ordering</h3>
      </header-prop>
      <doc-descr></doc-descr>
      <eval-button id="g13"></eval-button>
      <br />
      <sentence-ordering>
        <sentence-ordering-item>a</sentence-ordering-item>
        <sentence-ordering-item>b</sentence-ordering-item>
        <sentence-ordering-item>c</sentence-ordering-item>
      </sentence-ordering>
    </doc-example>
  </body>
</html>